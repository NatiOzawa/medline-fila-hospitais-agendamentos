<div class="container login-container d-flex align-items-center justify-content-center">
  <div class="row col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="form-login">
      <h2>Inscreva-se</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      label: "Nome",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first_name", style: "text-transform: capitalize;" }%>
          <%= f.input :last_name,
                      label: "Sobrenome",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last_name", style: "text-transform: capitalize;" }%>
          <%= f.input :date_of_birth,
                      label: "Data de Nascimento",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "date_of_birth" },
                      start_year: Date.today.year - 100,
                      end_year: Date.today.year,
                      order: [:day, :month, :year]%>
          <%= f.input :address,
                      label: "Endereço",
                      input_html: {class: "d-none", data: {address_autocomplete_target: "address"}},
                      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
          <%= f.input :phone,
                      label: "Telefone",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "phone" }%>
          <%= f.input :health_insurance,
                      label: "Plano de Saúde (opicional)",
                      autofocus: true,
                      input_html: { autocomplete: "health_insurance" }%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: "Senha",
                      required: true,
                      hint: ("#{@minimum_password_length} mínimo de caracteres" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirme sua senha",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Registrar-se", style: "border: 0; border-radius: 100px; background-color: #64B6AC; color: #ffffff; font-weight: bold; transition: all 0.5s; -webkit-transition: all 0.5s;", class: "btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
