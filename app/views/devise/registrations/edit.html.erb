<div class="container d-flex align-items-center justify-content-center">
  <div class="row col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="edit-card">
      <h2>Editar Conta</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="dados-conta">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        label: "Nova Senha",
                        hint: "Deixe em branco caso não queira alterar",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirme sua Nova Senha",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        label: "Senha atual",
                        hint: "precisamos da sua senha atual para confirmar as alterações",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="dados-pessoais">
            <%= f.input :first_name,
                        label: "Nome",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name", style: "text-transform: capitalize;" }%>
            <%= f.input :last_name,
                        label: "Sobrenome",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last_name", style: "text-transform: capitalize;" }%>
            <%= f.input :date_of_birth,
                        label: "Data de Nascimento",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "date_of_birth" }%>
            <%= f.input :address,
                        label: "Endereço",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "address", style: "text-transform: capitalize;" }%>
            <%= f.input :phone,
                        label: "telefone",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "phone" }%>
            <%= f.input :health_insurance,
                        label: "Plano de Saúde (opicional)",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "health_insurance" }%>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Update", class: "btn btn-primary" %>
          <%= link_to "Voltar", home_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
