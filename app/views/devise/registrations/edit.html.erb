<div class="container d-flex align-items-center justify-content-center">
  <div class="row col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="texto">
      <h1><strong>Editar Conta</h1></strong>
    </div>
    <div class="edit-card">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="dados-conta">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        label: "Nova Senha",
                        hint: "Deixe em branco caso não queira alterar",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirme sua Nova Senha",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        label: "Senha Atual",
                        hint: "Precisamos da sua senha atual para confirmar as alterações",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="dados-pessoais">
            <%= f.input :first_name,
                        label: "Nome",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name", style: "text-transform: capitalize;" }%>
            <%= f.input :last_name,
                        label: "Sobrenome",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last_name", style: "text-transform: capitalize;" }%>
            <%= f.input :date_of_birth,
                        label: "Data de Nascimento",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "date_of_birth" },
                        start_year: Date.today.year - 100,
                        end_year: Date.today.year,
                        order: [:day, :month, :year]%>
            <%= f.input :address,
                        label: "Endereço",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "address", style: "text-transform: capitalize;" }%>
            <%= f.input :phone,
                        label: "Telefone",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "phone" }%>
            <%= f.input :health_insurance,
                        label: "Plano de Saúde (opicional)",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "health_insurance" }%>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Atualizar", style: "padding: 12.5px 30px; border: 0; border-radius: 100px; background-color: #64B6AC; color: #ffffff; font-weight: bold; transition: all 0.5s; -webkit-transition: all 0.5s; text-decoration: none;" %>
          <%= link_to "Voltar", home_path, style: "padding: 12.5px 30px; border: 0; border-radius: 100px; background-color: #64B6AC; color: #ffffff; font-weight: bold; transition: all 0.5s; -webkit-transition: all 0.5s; text-decoration: none;" %>

        </div>
      <% end %>
    </div>
  </div>
</div>
