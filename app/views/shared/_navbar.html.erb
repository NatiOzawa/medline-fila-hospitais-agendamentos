<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("logo.png") %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-items navbar-collapse collapse">
      <ul class="navbar-nav flex-row flex-wrap bd-navbar-nav">
        <li class="nav-item col-sm-4 col-lg-auto ">
          <%= link_to "Junte-se a Medline", root_path(anchor: "junte"), class: "nav-link py-2 px-0 px-lg-2 active mr-5" %>
        </li>
        <li class="nav-item col-sm-4 col-lg-auto">
          <%= link_to "Nossa História", root_path(anchor: "historia"), class: "nav-link py-2 px-0 px-lg-2 active" %>
        </li>
        <li class="nav-item col-sm-4 col-lg-auto">
          <%= link_to "FAQ", root_path(anchor: "faq"), class: "nav-link py-2 px-0 px-lg-2 active" %>
        </li>
      </ul>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
          <div class="usuario">
            <%= link_to "Olá, " + current_user.first_name.capitalize, "#", class: "nav-link" %>
          </div>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag ("menu.png"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Início", home_path, class: "dropdown-item" %>
              <%= link_to "Agendar Consultas", new_appointment_path, class: "dropdown-item" %>
              <%= link_to "Meus Agendamentos", my_appointments_appointments_path, class: "dropdown-item" %>
              <%= link_to "Histórico de Consultas", history_appointments_path, class: "dropdown-item" %>
              <%= link_to "Minha Conta", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Sair", logout_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
